{
  "name": "cocs-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for COCS application",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all --context environment=dev",
    "deploy:staging": "cdk deploy --all --context environment=staging", 
    "deploy:prod": "cdk deploy --all --context environment=prod",
    "destroy:dev": "cdk destroy --all --context environment=dev",
    "destroy:staging": "cdk destroy --all --context environment=staging",
    "destroy:prod": "cdk destroy --all --context environment=prod",
    "synth": "cdk synth",
    "diff": "cdk diff"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "aws-cdk": "2.87.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "aws-cdk-lib": "2.87.0",
    "constructs": "^10.0.0"
  }
}